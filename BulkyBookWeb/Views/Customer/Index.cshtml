@model IEnumerable<Customer>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Add New Customer</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped bg-light" style="width:100%">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Customer Email
            </th>

        </tr>
    </thead>
    @if (Model.Any())
    {
            <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td>
                        @item.Name
                            </td>
                            <td>
                        @item.Email
                            </td>
                            <td class="text-end" width="15%">

                                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Customer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"> <i class="bi bi-trash"></i> Delete</a>

                            </td>
                        </tr>
            }
        </tbody>
    }
</table>
@if (!Model.Any())
{
    <p>No Customers</p>
}
