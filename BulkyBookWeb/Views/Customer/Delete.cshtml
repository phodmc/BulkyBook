@model Customer

<form method="post">


    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Customer</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name" ></label>
            <input asp-for="Name" class="form-control" disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled/>
             <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" disabled/>
             <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger" style="width:100px">Delete</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary" style="width:100px">Cancel</a>
    </div>
</form>