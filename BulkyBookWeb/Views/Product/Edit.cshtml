@model Product

<form method="post">
        <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
         <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control"/>
        </div>

        <button type="submit" class="btn btn-primary" style="width:100px">Create</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:100px">Go back</a>
    </div>
</form>