@model IEnumerable<Product>
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Add New Product</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped bg-light" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
             <tr>
                  <td>
                    @item.Name
                  </td>
                  <td>
                    @item.Quantity
                  </td>
                  <td width="10%" class="text-end">
                       <!-- Button trigger modal -->
                      <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                      <a data-bs-toggle="modal" asp-route-id="@item.Id"  data-bs-target="#exampleModal" class="btn btn-outline-danger btn-sm">Delete</a>
                  </td>
             </tr>
        }
    </tbody>
</table>

    <!-- Delete Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete Item?
          </div>
          <div class="modal-footer">
              <form method="post" action="Delete" >
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" asp-controller="Product" class="btn btn-primary">Save changes</button>
              </form>

          </div>
        </div>
      </div>
    </div>

